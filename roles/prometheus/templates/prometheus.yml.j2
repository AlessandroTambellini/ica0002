global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ["localhost:9090"]
    metrics_path: '/prometheus/metrics'

  - job_name: 'linux'
    static_configs:
    - targets:
{% for server in groups['all'] %}
      - {{ server }}:9100
{% endfor %}
    metrics_path: '/metrics'

  - job_name: 'bind9'
    static_configs:
    - targets:
{% for server in groups['dns_servers'] %}
      - {{ server }}:9119
{% endfor %}
    metrics_path: '/metrics'

  - job_name: 'nginx'
    static_configs:
    - targets:
{% for server in groups['all'] %}
      - {{ server }}:9113
{% endfor %}
    metrics_path: '/metrics'

  - job_name: 'mysql'
    static_configs:
    - targets:
{% for server in groups['db_servers'] %}
      - {{ server }}:9104
{% endfor %}
    metrics_path: '/metrics'

  - job_name: 'influxdb'
    static_configs:
    - targets:
{% for server in groups['influxdb_servers'] %}
      - {{ server }}:9424
{% endfor %}
    metrics_path: '/metrics'

  - job_name: 'haproxy'
    static_configs:
    - targets:
{% for server in groups['haproxy_servers'] %}
      - {{ server }}:9101
{% endfor %}
    metrics_path: '/metrics'

  - job_name: 'keepalived'
    static_configs:
    - targets:
{% for server in groups['keepalived_servers'] %}
      - {{ server }}:9165
{% endfor %}
    metrics_path: '/metrics'

