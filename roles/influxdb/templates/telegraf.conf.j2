[agent]
  interval = "10s"

[[inputs.syslog]]
  protocol = "udp"  # Change to "tcp" or "tcp4" if needed
  service_address = ":514"  # Adjust the port as needed
  # Other syslog input settings as required

[[outputs.influxdb]]
  urls = ["http://localhost:8086"]  # Adjust the InfluxDB URL
  database = "your_database"  # Specify your InfluxDB database name
  # Other InfluxDB output settings as required
