global_defs {
    enable_script_security
    script_user keepalived_script
}

vrrp_script check_haproxy {                 
    script "/home/keepalived_script/check_haproxy.sh" 
    interval 1           
    weight 10                      
}

vrrp_instance VI_1 {
{% if inventory_hostname in groups['keepalived_master'] %}
    state MASTER
{% else %}
    state BACKUP
{% endif %}             
    interface ens3
    virtual_router_id 51
{% if inventory_hostname in groups['keepalived_master'] %}
    priority 100
{% else %}
    priority 99
{% endif %}
    preempt
    advert_int 1    
    authentication {
        auth_type PASS
        auth_pass {{ github_password }}
    }
    virtual_ipaddress {
{% set third_octet = ansible_default_ipv4.address.split('.')[2] %}
{% set fourth_octet = hostvars['AlessandroTambellini-1']['ansible_default_ipv4']['address'].split('.')[3] %}
        192.168.{{ third_octet | int + 58 }}.{{ fourth_octet }}/24
    }
    unicast_peer {
{% for vm in groups['keepalived_servers'] %}
{% if vm != inventory_hostname %}
        {{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endif %}
{% endfor %}                          
    }
    track_script {
        check_haproxy
    }
}

